{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/../src/test/jest.setup.ts"],
  "collectCoverageFrom": [
    "../src/**/*.(t|j)s",
    "!../src/**/*.d.ts",
    "!../src/**/test/**",
    "!../src/**/*.interface.ts",
    "!../src/main.ts"
  ],
  "coverageDirectory": "../coverage-e2e"
}
